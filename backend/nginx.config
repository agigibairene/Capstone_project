server {
    listen 80;
    server_name agriconnect-p2ssy.ondigitalocean.app;

    location /media/ {
        alias /workspace/backend/media/;
    }

    location /static/ {
        alias /workspace/backend/staticfiles/;
    }

    location / {
        proxy_pass http://127.0.0.1:8000;  
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
